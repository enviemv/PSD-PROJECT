@model Tuple<GymMe.Models.ProfileViewModel, GymMe.Models.ChangePasswordViewModel>

@{
    ViewData["Title"] = "Profile";
}

<h2>Profile</h2>

<div class="row">
    <div class="col-md-6">
        <h3>Update Profile</h3>
        <form asp-action="UpdateProfile" method="post">
            <div class="form-group">
                <label asp-for="Item1.Username" class="control-label"></label>
                <input asp-for="Item1.Username" class="form-control" />
                <span asp-validation-for="Item1.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item1.Email" class="control-label"></label>
                <input asp-for="Item1.Email" class="form-control" />
                <span asp-validation-for="Item1.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item1.Gender" class="control-label"></label>
                <select asp-for="Item1.Gender" class="form-control">
                    <option value="">Select Gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <span asp-validation-for="Item1.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item1.DateOfBirth" class="control-label"></label>
                <input asp-for="Item1.DateOfBirth" class="form-control" type="date" />
                <span asp-validation-for="Item1.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update Profile" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div class="col-md-6">
        <h3>Change Password</h3>
        <form asp-action="ChangePassword" method="post">
            <div class="form-group">
                <label asp-for="Item2.OldPassword" class="control-label"></label>
                <input asp-for="Item2.OldPassword" class="form-control" type="password" />
                <span asp-validation-for="Item2.OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item2.NewPassword" class="control-label"></label>
                <input asp-for="Item2.NewPassword" class="form-control" type="password" />
                <span asp-validation-for="Item2.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Item2.ConfirmPassword" class="control-label"></label>
                <input asp-for="Item2.ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="Item2.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update Password" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
