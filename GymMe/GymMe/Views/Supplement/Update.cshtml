@model GymMe.Models.SupplementViewModel

@{
    ViewData["Title"] = "Update Supplement";
}

<h2>Update Supplement</h2>

<form asp-action="Update" method="post">
    <div class="form-group">
        <label asp-for="SupplementName" class="control-label"></label>
        <input asp-for="SupplementName" class="form-control" />
        <span asp-validation-for="SupplementName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SupplementExpiryDate" class="control-label"></label>
        <input asp-for="SupplementExpiryDate" class="form-control" type="date" />
        <span asp-validation-for="SupplementExpiryDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SupplementPrice" class="control-label"></label>
        <input asp-for="SupplementPrice" class="form-control" type="number" />
        <span asp-validation-for="SupplementPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SupplementTypeName" class="control-label"></label>
        <input asp-for="SupplementTypeName" class="form-control" />
        <span asp-validation-for="SupplementTypeName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Update" class="btn btn-primary" />
        <a asp-action="Manage" class="btn btn-secondary">Back</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
