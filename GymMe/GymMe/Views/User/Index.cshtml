@model IEnumerable<GymMe.Models.User>

@{
    ViewData["Title"] = "User List";
}

<h1>User List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New User</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserDOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserGender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserRole)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserDOB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserGender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserRole)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.UserID" class="btn btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.UserID" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.UserID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
